<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Spinner
        android:id="@+id/spinnerwcount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBottomOf="@+id/wordcount"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="606dp" />

    <Button
        android:id="@+id/btncount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="424dp"
        android:onClick="onclick"
        android:text="Calculate results"
        app:layout_constraintTop_toBottomOf="@+id/spinnerwcount"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="279dp" />

    <EditText
        android:id="@+id/wordcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="208dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/spinnerwcount"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="240dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The final results"
        tools:ignore="MissingConstraints,UnknownId"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="113dp" />

</androidx.constraintlayout.widget.ConstraintLayout>